#include<stdio.h>
#include<stdlib.h>
main(){

float n1,n2,n3,menor;

printf("\n\n\t===== Calcular o menor numero digitado =====\t\n\n");

printf("\nDigite o primeiro numero\n");
scanf("%f",&n1);

printf("\nDigite o segundo numero\n");
scanf("%f",&n2);

printf("\nDigite o terceiro numero\n");
scanf("%f",&n3);

	if ((n1<=n2)&&(n1<=n3)){
		menor=n1;
	} else if ((n2<=n1)&&(n2<=n3)){
		menor=n2;
	}else {
		menor=n3;
	}

printf("\nO menor numero e: %.2f\n\n",menor);

system("pause");

}
