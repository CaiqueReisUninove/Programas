#include<stdio.h>
#include<stdlib.h>
main(){
	
int n;

printf("\n\n\t===== Verificar se o numero digitado e par ou impar=====\t\n\n");

printf("\nDigite um numero\n");
scanf("%d",&n);

if (n%2==0){
	printf("\nO numero digitado e par\n");
} else{
	printf("\nO numero digitado e impar\n");	
}

system("pause");

}
